EXPRESS_PORT=4000
# URL du frontend autorisée par CORS (dev par défaut)
FRONTEND_URL=http://localhost:5173

NODE_ENV=development

DATABASE_URL=postgresql://collabwrite:your_db_password@postgres:5432/collabwrite?schema=public

POSTGRES_USER = collabwrite
POSTGRES_PASSWORD = your_db_password
POSTGRES_DB = collabwrite
POSTGRES_PORT = 5432

# Secrets JWT (générez des valeurs aléatoires longues en production)
JWT_SECRET=change_me_jwt_secret
JWT_REFRESH_SECRET=change_me_jwt_refresh_secret
# Durées d'expiration (adapter selon vos besoins)
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d


# Compte admin créé au démarrage si inexistant (adapter en prod)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change_me_admin_password
DEFAULT_ADMIN_NAME=admin


# Exemple: Gmail avec mot de passe d'application (16 caractères)
NODE_MAILER_HOST=smtp.gmail.com
NODE_MAILER_PORT=465
NODE_MAILER_SECURE=true
NODE_MAILER_USER=your.email@gmail.com

# Pour Gmail: créez un "mot de passe d'application" dans votre compte Google (cf. tuto à la racine du projet)
NODE_MAILER_PASSWORD=your_gmail_app_password_16_chars

# Adresse utilisée comme expéditeur (souvent identique à NODE_MAILER_USER)
GMAIL_USER=your.email@gmail.com